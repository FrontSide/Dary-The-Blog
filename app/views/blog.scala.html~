@(posts: List[Post], user: User)

@templ(title = "The Dary Blog", user){ 
    
    <div class="blog-title label-primary">    
        <h1> @posts(0).user.blogname </h1>
    </div>

    <!-- Display buttons for featured Posts -->    
    <ul class="nav nav-pills">
            @for(p <- posts) {    
              @if((p.isPublished) && (p.isFeatured)) { 
                <li><a href="#p@p.id" class="btn"> @p.title </a></li>       
              }    
            }
    </ul>

    @for(p <- posts) {

        @if((p.isPublished) || (user != null && posts(0).user.blogname == user.blogname)) {
        <!-- This is either a published post or you are watching your on blog -->

            <div class="blog-content" id="p@p.id">
                <h2> @p.title </h2>
                <h5 class="blog-post-header">                    
                    @if(p.isPublished) {
                        <span class="fa fa-globe"></span>
                    } else {
                        <div class="label label-bloghead label-warning">
                            <span class="fa fa-lock"></span>
                            This Post has not been published
                        </div>
                    }
                <span class="label label-bloghead"> created on <b> @p.creDate </b> </span>
                @if(user != null && posts(0).user.blogname == user.blogname) {
                        <a href="/edit/@p.id">
                            <span class="label label-bloghead label-danger">Edit                       
                                <span class="fa fa-pencil"></span>
                            </span>
                        </a>
                    }
                </h5>

                <hr />
                <br />             
                @Html(p.content) 
                <hr /> 
                <p class="blog-post-footer"> written by 
                    <a href=""> @posts(0).user.blogname </a> 
                </p>
            </div>

        } <!-- Endif isPublished or own blog -->
        
    } <!-- End For Loop -->
}{
    <script src="/assets/javascripts/blog_control.js"></script>  
}
